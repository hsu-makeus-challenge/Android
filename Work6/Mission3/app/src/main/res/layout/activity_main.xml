<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fragment가 들어갈 공간 -->
    <FrameLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mini_player_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 미니플레이어의 SeekBar -->
    <SeekBar
        android:id="@+id/mini_player_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="191"
        android:progress="0"
        android:progressTint="#81BEF7"
        android:thumbTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/mainPlayerCl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 항상 고정 표시되는 미니플레이어 -->
    <LinearLayout
        android:id="@+id/mainPlayerCl"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#E6E6E6"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 제목 + 가수 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/mini_player_song_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노래 제목"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mini_player_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수 이름"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 이전 곡 버튼 -->
        <ImageView
            android:id="@+id/prevBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_skip_previous_24"
            android:contentDescription="이전 곡"
            android:padding="8dp" />

        <!-- 재생/일시정지 버튼 -->
        <ImageView
            android:id="@+id/playPauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_play_24"
            android:contentDescription="재생/일시정지"
            android:padding="8dp" />

        <!-- 다음 곡 버튼 -->
        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_skip_next_24"
            android:contentDescription="다음 곡"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
