<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/album_img_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_album_exp2"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/album_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="앨범 제목"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/album_img_iv"
            app:layout_constraintTop_toTopOf="@+id/album_img_iv"
            app:layout_constraintEnd_toStartOf="@+id/album_more_iv"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/album_artist_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="가수 이름"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/album_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/album_title_tv" />

        <TextView
            android:id="@+id/album_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="날짜 | 장르"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintStart_toStartOf="@+id/album_artist_tv"
            app:layout_constraintTop_toBottomOf="@+id/album_artist_tv" />

        <ImageView
            android:id="@+id/album_more_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/album_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
